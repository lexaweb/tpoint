mixin icon(iconName)
  -mod = mod || ''
    svg(class="icon " + iconName)
      use(xlink:href="img/sprite.svg#" + iconName)

mixin breadcrumbs( ...list)
  .breadcrumbs
    ul.breadcrumbs-block
      each item, index in list
        li.breadcrumbs-block-item
          if index === list.length - 1
            span=item
          else
            a.breadcrumbs-block-item-link(href='/')=item

mixin pageTitle(pageTitle)
  .page_title
    h1=pageTitle

mixin sectionTitle(sectionTitle)
  .section_title
    h2=sectionTitle

mixin ui-button(text, color, submit, href)
  if submit
    .ui-button(class=color)
      input(type='submit', value=text)
  else
    .ui-button(class=color)
      a(href=href)=text

mixin ui-checkbox(id, text)
  .ui-checkbox
    input(id=id type='checkbox' name=id)
    label(for=id)!=text

mixin ui-input(text, id, r, type)
  if !type
    .ui-input
      input(id=id type='text')
      label(for=id)=text
  else if r
    .ui-input
      input(id=id required type=type)
      label(for=id)=text
  else
    .ui-input
      input(id=id type=type)
      label(for=id)=text

mixin ui-select( ...data)
  .ui-select
    select
      each item in data
        option=item

mixin ui-textarea(text, r)
  if r
    .ui-textarea
      textarea(placeholder=text required)
  else
    .ui-textarea
      textarea(placeholder=text)
